<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>
{{log posts}}
{{#if posts.length}}
<div class="col-md-6 post-list">
  <h3>Current Posts:</h3>

  {{#each posts as |post|}}
  <div class="row mb-2">
    <div class="col-md-8">
      <h4><a href="/posts/{{id}}">{{post.title}}</a></h4>
    </div>
  </div>
  {{/each}}
</div>
{{/if}}
</div>