<div class="row">
  <div id="user-welcome" class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>
{{log posts}}
{{#if posts.length}}
<div class="col-md-6 post-list">
  <h3>Current Posts:</h3>

  {{#each posts as |post|}}
  <div class="row mb-2">
    <div class="dash-post col-md-8">
      <a class="dash-title" href="/posts/{{id}}">{{post.title}}</a>
      <p class="dash-date">{{format_date post.date_created}}</p>
    </div>
  </div>
  {{/each}}
</div>
{{/if}}
</div>

<div class="form-group">
  <button><a href="./newpost">+ Create New Post</a></button>
</div>

<script src="/js/dashboard.js"></script>