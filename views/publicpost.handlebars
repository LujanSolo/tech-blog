<div class="edit-post-container">
  <h2>COMMENT POST</h2>
  <form class="edit-post-form">
    <label for="post-title">
      Title:
    </label>
    <br />
    <textarea id="post-title" name="post-title">
      {{title}}
    </textarea>
    <br />
    <label for="post-content">
      Content:
    </label>
    <br />
    <textarea id="post-content" name="post-content">
      {{content}}
    </textarea>
    <br />
    <br />

    <button id="commentBtn" type="submit" value="Submit" class="btn btn-sm btn-info" data-update="{{id}}">
      + COMMENT
    </button>
  </form>
</div>

<script src="/js/editpost.js"></script>