<div class="row">
  <div class="edit-post-container">
    <h2>EDIT POST</h2>
    <form class="edit-post-form">
      <label for="post-title">
        Title:
      </label>
      <br />
      <textarea id="post-title" contenteditable="true" name="post-title" rows="1" cols="50">
      {{title}}
    </textarea>
      <br />
      <label for="post-content">
        Content:
      </label>
      <br />
      <textarea id="post-content" name="post-content" rows="10" cols="75">
      {{content}}
    </textarea>
      <br />
      <br />
    </form>
    <button id="editPostBtn" type="submit" value="Submit" class="btn btn-primary" data-update="{{id}}">
      Update Post
    </button>

    <div class="m-1">
      <button id="delete-btn" class="btn btn-primary" data-id="{{id}}">DELETE POST</button>
    </div>

  </div>
</div>
<script src="/js/editpost.js"></script>